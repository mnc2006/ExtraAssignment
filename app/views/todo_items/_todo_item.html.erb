
<div class="row clearfix">
  <% if todo_item.completed? %>
  <div class="complete">
    <%= link_to complete_todo_list_todo_item_path(todo_list, todo_item), method: :patch do %>
  </div>
  <div class="todo_item">
    <p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
  </div>
    <div class="trash">
      <%=link_to "Delete", todo_list_todo_item_path(todo_list, todo_item), method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
    <% end %>


    <% else %>

    <div class="complete">
      <%= link_to complete_todo_list_todo_item_path(todo_list, todo_item), method: :patch do %>
      <button type="button" class="btn btn-success btn-xs">
        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
      </button>
    </div>

      <% end %>


    <div class="todo_item">
      <p><%= todo_item.content %></p>
    </div>
    <div class="trash">
      <%=link_to "Delete", todo_list_todo_item_path(todo_list, todo_item), method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
      <% end %>

  </div>
